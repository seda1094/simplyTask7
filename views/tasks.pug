doctype html
html(lang="en")
  head
    title= pageTitle
    block styles
    link(rel="stylesheet" type="text/css" href="/style.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js")
    script(src="script.js")

  body
    div.tasks_container
      section.create_section
        form(action="/tasks/add" method="POST")
          input(type="text" name="title" placeholder="your title")
          br
          input(type="text" name="instruction" placeholder="your instruction")
          br
          input(type="submit" value="submit").button
          img(src="/assets/duck.gif", alt="")
      section.tasks_section
        div.tasks
          for t,index in tasks
            div.task
              if t.done
                h1.done ##{index+1} #{t.title}
              else
                h1 ##{index+1} #{t.title}
              div.settings
                - url=t.id 
                a(href='/tasks/done/' + url)
                  img(src="/assets/icons/check.png", alt="")  
                a(href='/tasks/edit/' + url)
                  img(src="/assets/icons/edit.png", alt="")  
                a(href='/tasks/delete/' + url)
                  img(src="/assets/icons/cancel.png", alt="") 
          